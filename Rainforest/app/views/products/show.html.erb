<h1>Product Clicked</h1>

<%= render "product_individual", product: @product %>

<%= link_to "Edit", edit_product_path %> |

<%= link_to "Delete", product_url(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product #{ @product.name }?"} %>


<!-- First we will find the review for the product -->
<!--  Display the review (review description)  we will show the timestamp-->
<!--  have a form to add review we make sure the product_id is the same as params[:id] -->

<% @product.reviews.each do |review| %>

  <ul>
    <li><%= review.description %>
      <br>
      <%= review.created_at.asctime %>
    </li>
  </ul>

<% end %>
<%=  render 'review', {url: new_product_review_path(product_id: @product.id)}, review: @review %>
